package ArraysBasic;

public class FindSundays {
    public static void main(String[] args) {
        int num = 26;
        int Day1 = 1;

        int[] arr = new int[7];

        for (int i = 0; i < num; i++) {

            int currentDay = (Day1 + i - 1) % 7;
            arr[currentDay]++;
        }

        System.out.println(" Total Sundays: " + arr[6]);
    }
}
